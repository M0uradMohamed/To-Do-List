@model Member

@section Scripts {
    @if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]')
        </script>
    }
    @if (TempData["noFile"] != null)
    {
        <script>
            toastr.success('@TempData["noFile"]')
        </script>
    }

}

<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="#"><i class="bi bi-arrow-left"></i></a> welcome @Model.Name</h2>
        <h4>here is your to-do list :</h4>
        <form action="/task/create">
            <input type="hidden" name="MemberId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> create new
            </button>
        </form>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Created Date</th>
                <th scope="col">DeadLine</th>
                <th scope="col">pdf file</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tasks)
            {
                <tr class="table-light">
                    <th scope="row">@item.Title</th>
                    <td>@item.Description</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.DeadLine</td>
                    <td>
                        <a href="@Url.Action("DownloadFile", "Task", new { fileName = item.FileName , loc =item.MemberId })" class="btn btn-primary">
                            <i class="bi bi-download"></i>
                        </a>
                    </td>
                    <td>

                        <a href="/task/Edit/@item.Id" type="button" class="btn btn-dark">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#deleteModal" data-taskid="@item.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this task ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" action="/task/Delete">
                    <input type="hidden" name="taskId" id="taskIdInput" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var taskId = button.getAttribute('data-taskid');
        var input = document.getElementById('taskIdInput');
        input.value = taskId;
    });
</script>
