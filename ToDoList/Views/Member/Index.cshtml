@model Member
<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="#"><i class="bi bi-arrow-left"></i></a> welcome </h2>
        <h4>here is your to-do list :</h4>
        <form action="/task/create">
            <input type="hidden" name="MemberId" value="@Model.Id"/>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> create new 
            </button>
        </form>
    </div>
</div>

<div class="row">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Created Date</th>
            <th scope="col">DeadLine</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
            <tr class="table-light">
                <th scope="row">@item.Title</th>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>@item.DeadLine</td>

                <td>
                    <a href="/Category/Edit?categoryId=@item.Id" type="button" class="btn btn-dark">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#deleteModal" data-categoryid="@item.Id">
                        <i class="bi bi-trash3"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>